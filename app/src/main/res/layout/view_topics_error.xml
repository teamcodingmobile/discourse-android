<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/white">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iconTopicsError"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:srcCompat="@drawable/ic_topics_error"/>

    <TextView
        android:id="@+id/label_topics_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/topics_error_message" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonRetry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="156dp"
        android:text="@string/topics_error_retry"
        android:textColor="#fff"
        app:backgroundTint="@color/blue"
        />

</LinearLayout>