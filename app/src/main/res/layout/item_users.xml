<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:strokeColor="@color/mediumGrey"
        android:layout_gravity="center_vertical"
        app:cardCornerRadius="0dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="24dp">
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/posterImageUser"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_margin="16dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                />

            <TextView
                android:id="@+id/posterUsernameUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:textColor="@color/textColor"
                android:textSize="18sp"
                app:layout_constraintStart_toEndOf="@id/posterImageUser"
                app:layout_constraintTop_toTopOf="@id/posterImageUser"
                app:layout_constraintBottom_toBottomOf="@id/posterImageUser"
                tools:text="Nombre poster"
                android:gravity="center_vertical"/>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</FrameLayout>