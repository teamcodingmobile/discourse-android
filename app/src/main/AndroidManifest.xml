<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="io.keepcoding.discourse_android">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Discourseandroid">
        <activity android:name=".UI.login.MainActivity"
            android:theme="@style/Theme.Discourseandroid">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".UI.TabsActivity"
            android:theme="@style/Theme.Discourseandroid"
            android:windowSoftInputMode="adjustPan"/>
        <activity android:name=".UI.topics.topic_detail.TopicDetailActivity"
            android:theme="@style/Theme.Discourseandroid"/>
        <activity android:name=".UI.login.SignUpActivity"
            android:windowSoftInputMode="adjustResize|stateHidden"/>
        <activity android:name=".UI.login.SignInActivity"
            android:windowSoftInputMode="adjustResize|stateHidden"/>
        <activity android:name=".UI.topics.create_topic.CreateTopicActivity"
            android:windowSoftInputMode="adjustResize|stateHidden"/>
        <activity android:name=".UI.topics.topic_detail.reply.ReplyTopicActivity"
            android:windowSoftInputMode="adjustResize|stateHidden"/>

    </application>

</manifest>